  "license": "MIT",
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^2.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/fulldome-schema-suite.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/fulldome-schema-suite/issues"
