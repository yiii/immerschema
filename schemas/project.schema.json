{
  "$id"    : "https://example.com/schemas/project.schema.json",
  "$comment": "PROJECT â€“ root schema for fulldome projects.",
  "title"  : "Fulldome Project",
  "description": "Schema for fulldome project root, including global software and shots.",
  "type"   : "object",

  "required": ["projectId", "title", "shots"],
  "additionalProperties": false,

  "properties": {
    "projectId": { "type": "string", "description": "Unique project identifier." },
    "title"    : { "type": "string", "description": "Project title." },
    "schemaVersion": { "type": "string", "description": "Schema version." },

    "shots": {
      "type": "array",
      "items": { "$ref": "https://example.com/schemas/core.schema.json#" },
      "minItems": 1,
      "description": "List of shots in the project."
    },

    "globalSoftware": {
      "$comment": "Master list of all software used in the project.",
      "type": "array",
      "items": { "$ref": "./enum/software.enum.json" },
      "default": [],
      "description": "All software used in the project for licensing/IT."
    },

    "globalMusic": { "type": "string", "description": "Global music for the project." },
    "debug": { "$ref": "./ext/debug.schema.json#/properties/debug", "description": "Debug or scratch fields." }
  }
} 