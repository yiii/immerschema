{
  "$id": "immerschema/schemas/slices/content.slice.json",
  "type": "object",
  "properties": {
    "action": { "type": "string" },
    "userNote": { "type": "string" },
    "durationSec": { "type": "number", "minimum": 0.01 },
    "primaryTechnique": { "type": "string" },
    "voice": {
      "type": "object",
      "required": ["lang", "text"],
      "properties": {
        "lang": { "type": "string", "pattern": "^[a-z]{2}$" },
        "text": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
} 