    {
      "name": "task_status_validation",
      "description": "Tests task status field validation",
      "schema": "core.schema.json",
      "data": {
        "schemaVersion": "1.0.0",
        "id": "ts01-ss01",
        "index": 0,
        "scene": 1,
        "durationSec": 10,
        "voice": {
          "lang": "en",
          "text": "Testing task status"
        },
        "screenZone": "full_dome",
        "primaryTechnique": "cgi_3d_pre_render",
        "tasks": [
          {
            "id": 1,
            "task": "Test task",
            "dept": "VFX",
            "prio": "med",
            "status": "todo"
          }
        ]
      },
      "expected": "valid",
      "status_variations": ["todo", "in_progress", "done", "blocked"]
