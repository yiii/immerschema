{
  "description": "Comprehensive validation test cases for the Fulldome Schema Suite",
  "tests": [
    {
      "name": "minimal_valid_project",
      "description": "Tests the absolute minimum required fields for a valid project",
      "schema": "project.schema.json",
      "data": {
        "projectId": "min-001",
        "title": "Minimal Project",
        "shots": [
          {
            "schemaVersion": "1.0.0",
            "id": "sc01-ss01",
            "index": 0,
            "scene": 1,
            "durationSec": 10,
            "voice": {
              "lang": "en",
              "text": "Test"
            },
            "screenZone": "full_dome",
            "primaryTechnique": "cgi_3d_pre_render"
          }
        ]
      },
      "expected": "valid"
    },
    {
      "name": "invalid_shot_id_pattern",
      "description": "Tests invalid shot ID pattern (should fail)",
      "schema": "core.schema.json",
      "data": {
        "schemaVersion": "1.0.0",
        "id": "invalid-id",
        "index": 0,
        "scene": 1,
        "durationSec": 10,
        "voice": {
          "lang": "en",
          "text": "Test"
        },
        "screenZone": "full_dome",
        "primaryTechnique": "cgi_3d_pre_render"
      },
      "expected": "invalid",
      "error": "Shot ID must match pattern ^[a-z]{2}\\d{2}-ss\\d{2}$"
    },
    {
      "name": "invalid_language_code",
      "description": "Tests invalid language code in voice (should fail)",
      "schema": "core.schema.json", 
      "data": {
        "schemaVersion": "1.0.0",
        "id": "sc01-ss01",
        "index": 0,
        "scene": 1,
        "durationSec": 10,
        "voice": {
          "lang": "english",
          "text": "Test"
        },
        "screenZone": "full_dome",
        "primaryTechnique": "cgi_3d_pre_render"
      },
      "expected": "invalid",
      "error": "Language code must be exactly 2 lowercase letters"
    },
    {
      "name": "all_screen_zones_valid",
      "description": "Tests all valid screen zone values",
      "schema": "core.schema.json",
      "data": {
        "schemaVersion": "1.0.0",
        "id": "sz01-ss01",
        "index": 0,
        "scene": 1,
        "durationSec": 10,
        "voice": {
          "lang": "en",
          "text": "Testing screen zones"
        },
        "screenZone": "zenith",
        "primaryTechnique": "cgi_3d_pre_render"
      },
      "expected": "valid",
      "variations": [
        "zenith", "upper_band", "horizon_band", "lower_band", "nadir",
        "front", "rear", "left", "right", "north", "east", "south", "west",
        "upper_front_left", "upper_front_right", "upper_rear_left", "upper_rear_right",
        "lower_front_left", "lower_front_right", "lower_rear_left", "lower_rear_right",
        "full_dome"
      ]
    },
    {
      "name": "all_techniques_valid",
      "description": "Tests all valid technique values",
      "schema": "core.schema.json",
      "data": {
        "schemaVersion": "1.0.0",
        "id": "tc01-ss01",
        "index": 0,
        "scene": 1,
        "durationSec": 10,
        "voice": {
          "lang": "en",
          "text": "Testing techniques"
        },
        "screenZone": "full_dome",
        "primaryTechnique": "cgi_3d_pre_render"
      },
      "expected": "valid",
      "variations": [
        "cgi_3d_pre_render", "cgi_3d_realtime", "volumetric_capture", "photogrammetry",
        "hand_drawn_2d", "vector_2d", "cutout_animation", "motion_graphics", "info_graphics",
        "procedural_geometry", "particle_system", "fractal_render", "data_driven_visual",
        "fluid_sim", "smoke_fire_sim", "cloth_softbody_sim",
        "ai_image", "ai_video", "style_transfer",
        "live_action_plate", "macro_photography", "timelapse", "stereo_3d_capture", "mixed_media_collage",
        "cel_shaded", "toon_shader", "stop_motion",
        "audio_reactive", "music_visualizer"
      ]
    },
    {
      "name": "task_priority_validation",
      "description": "Tests task priority field validation",
      "schema": "core.schema.json",
      "data": {
        "schemaVersion": "1.0.0",
        "id": "tp01-ss01",
        "index": 0,
        "scene": 1,
        "durationSec": 10,
        "voice": {
          "lang": "en",
          "text": "Testing task priorities"
        },
        "screenZone": "full_dome",
        "primaryTechnique": "cgi_3d_pre_render",
        "tasks": [
          {
            "id": 1,
            "task": "High priority task",
            "dept": "VFX",
            "prio": "high",
            "status": "todo"
          }
        ]
