    {
      "name": "multiple_risk_flags",
      "description": "Tests multiple risk flags in a single shot",
      "schema": "core.schema.json",
      "data": {
        "schemaVersion": "1.0.0",
        "id": "rf01-ss01",
        "index": 0,
        "scene": 1,
        "durationSec": 60,
        "voice": {
          "lang": "en",
          "text": "This sequence has multiple risk considerations"
        },
        "screenZone": "full_dome",
        "primaryTechnique": "cgi_3d_realtime",
        "riskFlags": [
          "photosensitive_seizure",
          "motion_sickness", 
          "vertigo_trigger",
          "loud_volume",
          "render_time_overrun"
        ]
      },
      "expected": "valid"
    },
    {
      "name": "custom_role_usage",
      "description": "Tests usage of custom roles with 'other' enum value",
      "schema": "core.schema.json",
      "data": {
        "schemaVersion": "1.0.0",
        "id": "cr01-ss01",
        "index": 0,
        "scene": 1,
        "durationSec": 30,
        "voice": {
          "lang": "en",
          "text": "Testing custom roles"
        },
        "screenZone": "full_dome",
        "primaryTechnique": "ai_image",
        "people": [
          {
            "role": "other",
            "customRole": "AI Prompt Engineer",
            "name": "Custom Person",
            "contacts": {
              "email": "custom@example.com"
            }
          }
        ]
      },
      "expected": "valid"
    },
    {
      "name": "missing_required_fields",
      "description": "Tests validation failure when required fields are missing",
      "schema": "core.schema.json",
      "data": {
        "id": "mr01-ss01",
        "index": 0,
        "scene": 1
      },
      "expected": "invalid",
      "error": "Missing required fields: schemaVersion, durationSec, voice, screenZone, primaryTechnique"
    }
  ]
} 